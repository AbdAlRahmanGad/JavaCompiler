void Statement() : {}
{
    (LOOKAHEAD(3)
        VariableDeclaration() |
        Assignment() |
        IfStatement() |
        WhileStatement()
    )*
    <EOF>
}

void nestedStatement() : {}
{
    (LOOKAHEAD(4)
        VariableDeclaration() |
        Assignment() |
        WhileStatement() |
        IfStatement()
    )
}

void testWhile() : {}
{
    (WhileStatement())*
    <EOF>
}
void WhileStatement() : {}
{
    <WHILE> <LPAREN> Expression() <RPAREN>
     (nestedStatement() | <LBRACE> (nestedStatement())* <RBRACE>)
}

